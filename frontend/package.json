  "scripts": {
    "watch": "webpack --progress --watch --mode=development",
    "build": "webpack --mode=production",
    "lint": "eslint --ext .js,.vue src",
    "style": "prettier src/ --write"
  },
  "dependencies": {
    "@babel/core": "^7.12.17",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/preset-env": "^7.12.17",
