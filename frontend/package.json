  "devDependencies": {
    "@types/leaflet": "^1.5.23",
    "numeral": "^2.0.6",
    "vue-i18n-extract": "^1.2.0",
    "jquery": "~2.2.4"
  },
  "prettier": {
    "vueIndentScriptAndStyle": true,
    "printWidth": 88
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "prettier",
      "prettier/vue"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "no-unused-vars": "warn",
      "vue/no-unused-vars": "error",
      "vue/max-attributes-per-line": [
        "warn",
        {
          "singleline": 4,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ]
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {}
    }
  },
  "browserslist": [
    "since 2017-06"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "babel-plugin-graphql-tag",
        {
          "strip": true
        }
      ]
    ]
  }
}
