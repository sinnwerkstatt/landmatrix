{
  "name": "landmatrix",
  "version": "1.0.0",
  "repository": "https://github.com/sinnwerkstatt/landmatrix",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/static/; touch dist/.gitkeep; cp dist/index.html ../templates/vuebase.html",
    "lint": "eslint --ext .js,.vue src",
    "style": "prettier src/ --write"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@geoman-io/leaflet-geoman-free": "^2.11.2",
    "@googlemaps/js-api-loader": "^1.12.1",
    "@hcaptcha/vue-hcaptcha": "^0.3.0",
    "@turf/turf": "^6.4.0",
    "@types/leaflet": "^1.7.3",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "autoprefixer": "^10.2.6",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "bootstrap-vue": "^2.21.2",
    "chart.js": "~2.9.4",
    "cytoscape": "^3.19.0",
    "cytoscape-cose-bilkent": "^4.1.0",
    "cytoscape-popper": "^1.0.7",
    "d3": "^6.7.0",
    "d3-format": "^3.0.1",
    "d3-hierarchy": "^2.0.0",
    "d3-selection": "^2.0.0",
    "d3-shape": "^2.1.0",
    "dayjs": "^1.10.5",
    "deep-object-diff": "^1.1.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^7.12.1",
    "eslint-plugin-vue-scoped-css": "^1.2.2",
    "graphql": "^15.5.1",
    "graphql-tag": "^2.12.5",
    "jquery": "~2.2.4",
    "js-cookie": "^2.2.1",
    "leaflet": "^1.7.1",
    "leaflet-gesture-handling": "^1.2.1",
    "leaflet.markercluster": "^1.5.0",
    "lodash-es": "^4.17.21",
    "numeral": "^2.0.6",
    "popper.js": "^1.16.1",
    "prettier": "^2.3.2",
    "sass": "~1.32.13",
    "tippy.js": "^5.2.1",
    "v-calendar": "^1.0.6",
    "vite": "~2.2.4",
    "vite-plugin-vue2": "^1.7.2",
    "vue": "^2.6.14",
    "vue-apollo": "^3.0.7",
    "vue-eslint-parser": "^7.7.2",
    "vue-i18n": "^8.24.5",
    "vue-i18n-extract": "^1.2.3",
    "vue-json-csv": "^1.2.11",
    "vue-matomo": "^3.14.0-0",
    "vue-meta": "^2.4.0",
    "vue-multiselect": "^2.1.6",
    "vue-router": "^3.5.2",
    "vue-scroll-loader": "^2.2.0",
    "vue-template-compiler": "^2.6.14",
    "vue2-leaflet": "^2.7.1",
    "vuex": "^3.6.2"
  },
  "prettier": {
    "vueIndentScriptAndStyle": true,
    "printWidth": 88
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2017": true
    },
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {}
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "plugin:vue-scoped-css/vue3-recommended",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "vue/no-unused-vars": "error",
      "vue/no-v-html": "warn",
      "vue/max-attributes-per-line": [
        "warn",
        {
          "singleline": 4,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ]
    }
  },
  "browserslist": [
    "since 2017-06"
  ]
}
