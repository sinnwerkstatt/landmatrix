{
  "name": "landmatrix",
  "version": "0.0.1",
  "scripts": {
    "dev": "concurrently npm:backend npm:frontend npm:caddy",
    "dev:test": "DATABASE_URL=postgis://landmatrix:landmatrix@localhost/playwright_test npm run dev",
    "backend": "poetry run ./manage.py runserver",
    "frontend": "cd frontend && node build/index.js",
    "caddy": "caddy run",
    "playwright": "npx playwright test tests/ --workers 1",
    "test:setup": "DATABASE_URL=postgis://landmatrix:landmatrix@localhost/playwright_test ./test-setup.sh",
    "pretest": "npm run test:setup",
    "test": "DATABASE_URL=postgis://landmatrix:landmatrix@localhost/playwright_test ./test.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/node": "~18",
    "concurrently": "^8.2.2"
  }
}
